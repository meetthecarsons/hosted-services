# Replace YOUR_DOMAIN with the public hostname you'll use (e.g. jellyfin.example.com)
# Make sure DNS for that name points to your public IP, and port-forward 80/443 to the host running this compose.

meetthecarsons.com {
    reverse_proxy jellyfin:8096 {
        header_up Host {http.request.host}
        header_up X-Real-IP {http.request.remote}
    }

    encode zstd gzip

    log {
        output file /data/logs/jellyfin.access.log
        format single_field common_log
    }
}
